pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Execute the build.sh script
                    sh "chmod +x build.sh"
                    sh './build.sh'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Execute the deploy.sh script
                    sh "chmod +x deploy.sh"
                    sh './deploy.sh'
                }
            }
        }
    }
}

